#define _CRT_SECURE_NO_WARNINGS
#include <iostream>

using namespace std;


int main()
{
	for (int a = 0; a < 4; a++)
	{
		for (int b = 4; b > a; b--)
		{
			cout << " ";
		}

		for (int c = 0; c < a * 2 + 1; c++)
		{
			cout << "*";
		}

		cout << endl;
	}

	for (int i = 4; i >= 0; i--)
	{
		for (int j = 4; j > i; j--)
		{
			cout << " ";
		}

		for (int k = 0; k < i * 2 + 1; k++)
		{
			cout << "*";
		}

		cout << endl;
	}
	


	return 0;
}
