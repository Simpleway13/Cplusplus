#include <iostream>

using namespace std;

int main ()
{
  
  for (int i = 0; i < 5; i++)
    {
        for (int j = 4; j > i; j--)
        {
            cout << " ";
        }

        for (int k = i + 1; k > 0; k--)
        {
            cout << "*";
        }
        cout << endl;
    }
  
  return 0;
}
